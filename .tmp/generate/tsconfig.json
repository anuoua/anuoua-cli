{
    "compilerOptions": {
        "module": "commonjs",
				"moduleResolution": "node",
				"target": "es6",
				"jsx": "react",
        "rootDir": "./src",
        "outDir": "./build",
				"inlineSourceMap": true,
				"declaration": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
				"strict": true,
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
			"./src/**/*.ts"
		]
}
